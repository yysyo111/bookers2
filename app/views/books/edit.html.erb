<h2>Editing Book</h2>
  <%= form_with model: @book,url: book_path(@book.id), method: :patch do |f| %>
    <label>Title</label>
      <%= f.text_field :title %>
    <label>Opinion</label>
      <%= f.text_area :body %>
    <%= f.submit 'Update book' %>
    <%= link_to "Show", book_path(@book.id) %>
    <%= link_to "Back", books_path(@book.id) %>
  <% end %>
  