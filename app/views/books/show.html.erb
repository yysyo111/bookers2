<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/userinfo', user: @user %>
      <%= render 'newbook', book: @booknew %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %><br/>
              <%= @user.name %>
              <% end %>
            <td>
              <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td>
              <% if @user == current_user %>
              <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_2546" %>
              <% end %>
            </td>
            <td>
              <% if @user == current_user %>  <!-- @book.userでも大丈夫-->
              <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger destroy_book_2530" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>



